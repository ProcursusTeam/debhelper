if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask #UNITFILES# >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		for UFILE in #UNITFILES#
		do
			if ! [ -e "/lib/systemd/system/$UFILE" ]; then
				deb-systemd-helper purge "$UFILE" >/dev/null || true
				deb-systemd-helper unmask "$UFILE" >/dev/null || true
			fi
		done
	fi
fi
